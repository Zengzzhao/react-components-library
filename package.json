{
  "name": "hkx-npm",
  "version": "0.0.0",
  "private": true,
  "description": "HKX component library monorepo powered by dumi + pnpm",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --filter @hkx/* run build",
    "build:design": "pnpm --filter @asuperlib/design build",
    "build:uitl": "pnpm --filter @asuperlib/uitl build",
    "build:watch": "pnpm -r --filter @hkx/* run build:watch",
    "build:workspace": "pnpm -r build",
    "clean": "pnpm -r exec node -e \"const fs=require('fs');try{fs.rmSync('dist',{recursive:true,force:true});}catch(e){if(e.code!=='ENOENT')throw e;}\"",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "docs:preview": "dumi build && dumi preview",
    "doctor": "father doctor",
    "lint": "pnpm lint:es && pnpm lint:css",
    "lint:css": "stylelint \"packages/**/*.{css,less}\"",
    "lint:es": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install && dumi setup",
    "publish:design": "pnpm --filter @asuperlib/design publish",
    "publish:uitl": "pnpm --filter @asuperlib/uitl publish",
    "release": "node scripts/publish-packages.mjs"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@umijs/lint": "^4.0.0",
    "antd": "^5.0.0",
    "axios": "^1.6.8",
    "dumi": "^2.4.13",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "less": "^4.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1",
    "typescript": "^5.3.3"
  },
  "authors": [
    "lxq1990.0716@qq.com"
  ]
}
